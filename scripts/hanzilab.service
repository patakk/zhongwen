[Unit]
Description=Gunicorn instance to serve zhongwen app
After=network.target

[Service]
User=patakk
Group=patakk
WorkingDirectory=/home/patakk/hanzilab/repo/hanzi-backend
Environment="PATH=/home/patakk/hanzilab/repo/hanzi-backend/.venv/bin" "PROD=true"
ExecStart=/home/patakk/hanzilab/repo/hanzi-backend/.venv/bin/gunicorn --bind 0.0.0.0:8000 --workers=3 --preload app:app

[Install]
WantedBy=multi-user.target

